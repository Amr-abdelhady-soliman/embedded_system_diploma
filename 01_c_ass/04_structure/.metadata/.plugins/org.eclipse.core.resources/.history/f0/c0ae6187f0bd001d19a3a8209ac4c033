#include "stdio.h"
typedef struct Semployee
{
	int salary;
	int bonus;
	int d;
}employee;
employee mohamed, ahmed,mahmoud;
void calculate_salary(employee*, int *);
void main ()
{
	setvbuf(stdout, NULL, _IONBF, 0);
	setvbuf(stderr, NULL, _IONBF, 0);
	employee *ptr=&mohamed;
	int *mohamed_salary;
	calculate_salary(ptr,mohamed_salary);
	printf("mohamed salary is %d", *mohamed_salary);

}
void calculate_salary(employee *ptr,int*mohamed_salary)
{
	printf("enter information \n");
	printf("enter salary and bounus and deduction \n ");
	scanf("%d %d %d",&ptr_>salary,&ptr_>bonus,&ptr_>d);
	*mohamed_salary=(ptr_>salary)+(ptr_>bonus)-(ptr_>d);
}
