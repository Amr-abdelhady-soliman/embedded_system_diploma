#include "stdio.h"
struct Sstudent
{
	char name[50];
	int roll;
	float marks;
};

void main ()
{
	setvbuf(stdout, NULL, _IONBF, 0);
	setvbuf(stderr, NULL, _IONBF, 0);
	struct Sstudent mohamed;
	printf("enter name : ");
	scanf("%s", &mohamed.name);
	printf("\n enter roll number : ");
	scanf("%d", &mohamed.roll);
	printf("\n enter marks : ");
	scanf("%s", &mohamed.marks);
	printf("displaying information \n");
	printf("\n name :%s\n roll : %d \n marks:  %0.2f", mohamed.name,mohamed.roll,mohamed.marks );
}
